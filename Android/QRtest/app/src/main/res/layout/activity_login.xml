<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ioptyu2.qrtest.login"
    android:background="@drawable/backgroundlogin">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="333dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/email_box"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_above="@+id/cardView"
        android:layout_alignLeft="@+id/password_box"
        android:layout_alignStart="@+id/password_box"
        android:layout_marginBottom="154dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/password_box"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/email_box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp"
        app:cardBackgroundColor="@color/common_google_signin_btn_text_dark_disabled"
        app:cardCornerRadius="25dp"
        app:cardElevation="24dp"
        android:id="@+id/cardView">

        <RelativeLayout
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="login">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Login!"
                android:textColor="#fff"
                android:textSize="24sp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/register_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:onClick="buttonToRegister"
        android:text="Register Here"
        android:textColor="#fff" />
</RelativeLayout>
